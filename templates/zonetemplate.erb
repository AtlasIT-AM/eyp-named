;
; puppet managed file
;
$TTL	<%= @default_ttl %>
@		IN SOA	<%= @zonename %>. root (
					<%= @serial %>		; serial
					<%= @refresh %>			; refresh
					<%= @retry %>			; retry
					<%= @expiry %>			; expiry
					<%= @minttl %>)			; min TTL

	       		IN NS		ns.<%= @zonename %>.

<% if defined?(@ns) -%>
<% @ns.each do |val| -%>
ns.<%= @zonename %>. IN A <%= val %>
<% end -%>
<% end -%>
